module uim.logging.formatters.abstract_;

import uim.logging;

@safe:

abstract class AbstractFormatter {
    use InstanceConfigTemplate();

    protected IData[string] _defaultConfigData;

    this(Iconfiguration.getData(string] configData = null) {
        _defaultConfigData = Json.emptyObject;

        configuration.update(configData);
    }
    
    // Formats message.
    abstract string format(Json loggingLevel, string loggingMessage, IData[string] loggingData = null);
}
