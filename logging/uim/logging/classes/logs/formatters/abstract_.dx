module uim.logging.formatters.abstract_;

import uim.logging;

@safe:

abstract class AbstractFormatter {
    use InstanceConfigTemplate();

    protected IData[string] _defaultConfigData;

    this(IData[string] configData = null) {
        _defaultConfigData = IData.emptyObject;

        configuration.update(configData);
    }
    
    // Formats message.
    abstract string format(IData loggingLevel, string loggingMessage, IData[string] loggingData = null);
}
