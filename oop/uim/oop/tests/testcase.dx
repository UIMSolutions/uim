    protected void tearDown() {
        super.tearDown();
        this.teardownFixtures();

        if (_configure) {
            Configuration.clear();
            Configuration.update(_configure);
        }
        getTableLocator().clear();
       _configure = null;
       _tableLocator = null;
        if (class_exists(Mockery.classname)) {
            Mockery.close();
        }
    }
    
